<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<div>
  <%= flash[:notice] %>
</div>

<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
  <div class="row">
  <div class="col-md-3">

  <h2>User info</h2>

  <div>
    <%= image_tag @user.get_profile_image(100,100) %>
  </div>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <br>
  <div class="row">
    <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with scope: :book, url: books_path(@book), local: true do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
<div class="form-group">
  <%= f.label :opinion %>
  <%= f.text_area :body, value: '', class: "form-control" %>
</div>
    <div class="form-group">
      <%= f.submit 'Create Book', class: "btn btn-success", data: { disable_with: "Create Book" } %>
    </div>
  <% end %>
  </div>
  <div class='col-md-8 offset-md-1'>

  <h2>Books</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user.books.each do |book| %>
        <tr>
          <td>
           <%= image_tag @user.get_profile_image(80, 80) %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>
</main>
</html>

