<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<main>
  <p id="notice"></p>
  <div class='container'>
  <div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

  <h2>User info</h2>

  <div class='container px-5 px-sm-0'>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

        <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "名前" %>
          <br>
          <%= f.label :profile_image, "Image" %>
          <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*", placeholder: "プロフィール画像" %>
          <br>
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class: "form-control", placeholder: "自己紹介" %>
          <br>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</main>
 <br>
</html>